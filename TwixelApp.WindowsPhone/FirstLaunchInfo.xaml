<Page
    x:Class="TwixelApp.FirstLaunchInfo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TwixelApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
    		<TextBlock x:Name="welcomeBlock" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Welcome to Twixel!" VerticalAlignment="Top" FontSize="32" Margin="0,0,0,50" Foreground="CornflowerBlue"/>
    		<TextBlock x:Name="loginBlock" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Login to Twitch.TV" VerticalAlignment="Top" Margin="0,0,0,25" FontSize="21.333" Tapped="loginBlock_Tapped">
    			<TextBlock.Foreground>
    				<SolidColorBrush Color="{StaticResource TwixelBlue}"/>
    			</TextBlock.Foreground>
    		</TextBlock>
    		<TextBlock x:Name="continueBlock" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Continue without logging in" VerticalAlignment="Bottom" Margin="0" FontSize="21.333" Tapped="continueBlock_Tapped">
    			<TextBlock.Foreground>
    				<SolidColorBrush Color="{StaticResource TwixelBlue}"/>
    			</TextBlock.Foreground>
    		</TextBlock>
    	</StackPanel>

    </Grid>
</Page>
